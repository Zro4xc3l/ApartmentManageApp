<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base App Theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <!-- Header Text -->
    <style name="HeaderTextStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <!-- Subheader Text -->
    <style name="SubheaderTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <!-- Section Header -->
    <style name="SectionHeaderTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <!-- Card Style -->
    <style name="CardStyle">
        <item name="android:background">@drawable/card_background</item>
        <item name="android:padding">16dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <!-- Card Header Text -->
    <style name="CardHeaderText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <!-- Card Subheader Text -->
    <style name="CardSubheaderText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <!-- Card Total Text -->
    <style name="CardTotalText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:paddingTop">8dp</item>
    </style>

    <!-- Spinner Style -->
    <style name="SpinnerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:padding">8dp</item>
    </style>

    <!-- EditText Style -->
    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <!-- Button Style -->
    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <string name="unit_tenant_summary">ยูนิต 01 - John Doe</string>
    <!-- Rent Summary -->
    <string name="rent_label">ค่าเช่า:</string>
    <!-- ค่าเริ่มต้น -->
    <string name="default_amount">฿0.00</string>
    <!-- Electricity -->
    <string name="electricity_label">ค่าไฟ:</string>
    <string name="electricity_usage">การใช้: 0 หน่วย</string>
    <!-- Water -->
    <string name="water_label">ค่าน้ำ:</string>
    <string name="water_usage">การใช้: 0 หน่วย</string>
    <!-- Service Fee -->
    <string name="service_fee_label">ค่าบริการ:</string>
    <!-- Additional Fee -->
    <string name="additional_label">เพิ่มเติม:</string>
    <string name="additional_description_default">คำอธิบาย: -</string>
    <!-- Grand Total -->
    <string name="grand_total_label">ยอดรวม:</string>
</resources>
