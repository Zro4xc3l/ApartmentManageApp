<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_bill_property"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header: ชื่อที่พัก -->
        <TextView
            android:id="@+id/tv_bill_property"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bill_property_header"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/black" />

        <!-- รอบการเรียกเก็บ -->
        <TextView
            android:id="@+id/tv_bill_billing_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bill_billing_period"
            android:textSize="16sp"
            android:layout_marginTop="6dp"
            android:textColor="@color/black" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />

        <!-- รายละเอียดค่าใช้จ่าย -->
        <TextView
            android:id="@+id/tv_bill_rent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bill_total_rent"
            android:textSize="16sp"
            android:layout_marginBottom="6dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_bill_electric"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bill_total_electric"
            android:textSize="16sp"
            android:layout_marginBottom="6dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_bill_water"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bill_total_water"
            android:textSize="16sp"
            android:layout_marginBottom="6dp"
            android:textColor="@color/black" />

        <!-- ค่าบริการ -->
        <TextView
            android:id="@+id/tv_bill_service_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bill_service_fee"
            android:textSize="16sp"
            android:layout_marginBottom="6dp"
            android:textColor="@color/black" />

        <!-- ค่าเพิ่มเติม -->
        <TextView
            android:id="@+id/tv_bill_additional"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bill_total_additional"
            android:textSize="16sp"
            android:layout_marginBottom="6dp"
            android:textColor="@color/black" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />

        <!-- ยอดรวม -->
        <TextView
            android:id="@+id/tv_bill_grand_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bill_grand_total"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <!-- สถานะบิล -->
        <TextView
            android:id="@+id/tv_bill_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bill_status"
            android:textSize="16sp"
            android:layout_marginTop="6dp"
            android:textColor="@color/black" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
