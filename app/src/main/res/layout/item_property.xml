<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Property Name -->
        <TextView
            android:id="@+id/property_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Property Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/textPrimary"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginBottom="4dp" />

        <!-- Property Address -->
        <TextView
            android:id="@+id/property_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Property Address"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_marginBottom="6dp"/>

        <!-- Unit Count -->
        <TextView
            android:id="@+id/property_units"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10 Units"
            android:textSize="14sp"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_marginBottom="6dp" />

        <!-- Electricity Rate -->
        <TextView
            android:id="@+id/property_electricity_rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Electricity Rate: 0.00 THB"
            android:textSize="14sp"
            android:textColor="@color/textSecondary"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginBottom="2dp"/>

        <!-- Water Rate -->
        <TextView
            android:id="@+id/property_water_rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Water Rate: 0.00 THB"
            android:textSize="14sp"
            android:textColor="@color/textSecondary"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginBottom="6dp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
