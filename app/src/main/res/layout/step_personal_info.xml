<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/step_personal_info_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Section Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/step_1_personal_info"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/textPrimary"
        android:paddingBottom="8dp"/>

    <!-- Profile Picture Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/profile_picture_optional"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/textPrimary"
        android:paddingBottom="4dp"/>

    <!-- Profile Image Preview (Clickable) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="12dp">

        <ImageView
            android:id="@+id/image_profile_preview"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:background="@drawable/edittext_background"
            android:src="@drawable/ic_person_placeholder"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/profile_picture"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tap_to_select_picture"
            android:textSize="12sp"
            android:textColor="@color/textSecondary"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <!-- Upload Button -->
    <Button
        android:id="@+id/button_upload_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/upload_profile_picture"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:padding="10dp"
        android:elevation="4dp"
        android:layout_marginBottom="12dp"/>

    <!-- First Name Input -->
    <EditText
        android:id="@+id/edit_first_name"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="@string/first_name"
        android:inputType="textPersonName"
        android:padding="12dp"
        android:background="@drawable/edittext_background"
        android:textColor="@color/textPrimary"
        android:textColorHint="@color/textSecondary"
        android:layout_marginBottom="12dp" />

    <!-- Last Name Input -->
    <EditText
        android:id="@+id/edit_last_name"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="@string/last_name"
        android:inputType="textPersonName"
        android:padding="12dp"
        android:background="@drawable/edittext_background"
        android:textColor="@color/textPrimary"
        android:textColorHint="@color/textSecondary"
        android:layout_marginBottom="12dp" />

    <!-- Email Input -->
    <EditText
        android:id="@+id/edit_email"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="@string/email_address"
        android:inputType="textEmailAddress"
        android:padding="12dp"
        android:background="@drawable/edittext_background"
        android:textColor="@color/textPrimary"
        android:textColorHint="@color/textSecondary"
        android:layout_marginBottom="12dp" />

    <!-- Phone Number Input -->
    <EditText
        android:id="@+id/edit_phone_number"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="@string/phone_number"
        android:inputType="phone"
        android:padding="12dp"
        android:background="@drawable/edittext_background"
        android:textColor="@color/textPrimary"
        android:textColorHint="@color/textSecondary"
        android:layout_marginBottom="12dp" />

    <!-- Workplace Details Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/workplace_details"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/textPrimary"
        android:paddingBottom="4dp"/>

    <!-- Workplace Name Input -->
    <EditText
        android:id="@+id/edit_workplace_name"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="@string/workplace_name"
        android:inputType="text"
        android:padding="12dp"
        android:background="@drawable/edittext_background"
        android:textColor="@color/textPrimary"
        android:textColorHint="@color/textSecondary"
        android:layout_marginBottom="8dp"/>

    <!-- Workplace Address Input -->
    <EditText
        android:id="@+id/edit_workplace_address"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="@string/workplace_address"
        android:inputType="textPostalAddress"
        android:padding="12dp"
        android:background="@drawable/edittext_background"
        android:textColor="@color/textPrimary"
        android:textColorHint="@color/textSecondary"
        android:layout_marginBottom="8dp"/>

    <!-- Workplace Phone Input -->
    <EditText
        android:id="@+id/edit_workplace_phone"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="@string/workplace_phone"
        android:inputType="phone"
        android:padding="12dp"
        android:background="@drawable/edittext_background"
        android:textColor="@color/textPrimary"
        android:textColorHint="@color/textSecondary"
        android:layout_marginBottom="12dp"/>

</LinearLayout>
