<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/step_emergency_contact_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Section Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/step_4_emergency_contact"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/textPrimary"
        android:paddingBottom="8dp"/>

    <!-- Emergency Contact Name -->
    <EditText
        android:id="@+id/edit_emergency_contact_name"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="@string/emergency_contact_name"
        android:inputType="textPersonName"
        android:padding="12dp"
        android:background="@drawable/edittext_background"
        android:textColor="@color/textPrimary"
        android:textColorHint="@color/textSecondary"
        android:layout_marginBottom="12dp" />

    <!-- Emergency Contact Relationship (Dropdown) -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/emergency_contact_relationship"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/textPrimary"
        android:paddingBottom="4dp"/>

    <Spinner
        android:id="@+id/spinner_emergency_contact_relationship"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/edittext_background"
        android:layout_marginBottom="12dp"/>

    <!-- Emergency Contact Phone -->
    <EditText
        android:id="@+id/edit_emergency_contact_phone"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="@string/emergency_contact_phone"
        android:inputType="phone"
        android:padding="12dp"
        android:background="@drawable/edittext_background"
        android:textColor="@color/textPrimary"
        android:textColorHint="@color/textSecondary"
        android:layout_marginBottom="12dp" />

</LinearLayout>
