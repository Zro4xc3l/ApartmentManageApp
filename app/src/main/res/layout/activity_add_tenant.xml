<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Tenant Name Input -->
    <EditText
        android:id="@+id/edit_tenant_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tenant Name"
        android:textSize="16sp"
        android:padding="12dp"
        android:background="@android:drawable/edit_text"/>

    <!-- Unit Number Input -->
    <EditText
        android:id="@+id/edit_unit_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Unit Number"
        android:textSize="16sp"
        android:padding="12dp"
        android:background="@android:drawable/edit_text"
        android:layout_marginTop="8dp"/>

    <!-- Phone Number Input -->
    <EditText
        android:id="@+id/edit_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone Number"
        android:inputType="phone"
        android:textSize="16sp"
        android:padding="12dp"
        android:background="@android:drawable/edit_text"
        android:layout_marginTop="8dp"/>

    <!-- Rent Status Selection -->
    <RadioGroup
        android:id="@+id/rent_status_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <RadioButton
            android:id="@+id/rent_status_paid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paid"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/rent_status_unpaid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unpaid"
            android:layout_marginStart="16dp"/>
    </RadioGroup>

    <!-- Save and Cancel Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp">

        <Button
            android:id="@+id/button_save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Save"
            android:textColor="@android:color/white"
            android:background="@color/teal_500"/>

        <Button
            android:id="@+id/button_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:textColor="@android:color/white"
            android:background="@android:color/darker_gray"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</LinearLayout>
