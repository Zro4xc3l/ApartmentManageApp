<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="false"
    app:cardPreventCornerOverlap="false"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Unit/Tenant Section -->
        <TextView
            android:id="@+id/unit_tenant_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Unit/Tenant"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="8dp"/>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="12dp"/>

        <!-- Electric Section -->
        <TextView
            android:id="@+id/electric_section_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Electric"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingBottom="4dp"/>

        <!-- Electric Reading Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <!-- Previous Electric Reading -->
            <TextView
                android:id="@+id/prev_electric_reading_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Previous: "
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/prev_electric_reading_text_view"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:layout_marginStart="8dp"/>

            <!-- Current Electric Reading (Input) -->
            <TextView
                android:id="@+id/current_electric_reading_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current: "
                android:textSize="14sp"
                android:layout_marginStart="16dp"/>

            <EditText
                android:id="@+id/current_electric_reading_edit_text"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Enter current"
                android:inputType="numberDecimal"
                android:textSize="14sp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Electric Calculated Price Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:paddingBottom="12dp">

            <TextView
                android:id="@+id/electric_calculated_price_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Electric Price: "
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/electric_price_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00 THB"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="4dp"/>
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="12dp"/>

        <!-- Water Section -->
        <TextView
            android:id="@+id/water_section_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Water"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingBottom="4dp"/>

        <!-- Water Reading Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <!-- Previous Water Reading -->
            <TextView
                android:id="@+id/prev_water_reading_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Previous: "
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/prev_water_reading_text_view"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:layout_marginStart="8dp"/>

            <!-- Current Water Reading (Input) -->
            <TextView
                android:id="@+id/current_water_reading_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current: "
                android:textSize="14sp"
                android:layout_marginStart="16dp"/>

            <EditText
                android:id="@+id/current_water_reading_edit_text"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Enter current"
                android:inputType="numberDecimal"
                android:textSize="14sp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Water Calculated Price Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:paddingBottom="12dp">

            <TextView
                android:id="@+id/water_calculated_price_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Water Price: "
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/water_price_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00 THB"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="4dp"/>
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="12dp"/>

        <!-- Additional Fee Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="8dp">

            <!-- Fee Amount Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="4dp">

                <TextView
                    android:id="@+id/additional_fee_label"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Additional"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/additional_fee_amount_edit_text"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="Enter Additional"
                    android:inputType="numberDecimal"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <!-- Fee Description Row -->
            <EditText
                android:id="@+id/additional_fee_description_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter description of additional charge"
                android:inputType="text"
                android:textSize="14sp"
                android:padding="8dp"/>
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="12dp"/>

        <!-- Final Total Price Section (Optional) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/final_total_price_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Final Total: "
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/final_total_price_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00 THB"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="4dp"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
